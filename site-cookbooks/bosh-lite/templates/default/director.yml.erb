---
name: Bosh Lite Director
port: 21085
mbus: nats://127.0.0.1:21084
dir: /opt/bosh/director
logging:
  level: DEBUG
redis:
  host: 127.0.0.1
  port: 6379
  password:
db:
  adapter: postgres
  user: postgres
  password: postges
  host: 127.0.0.1
  port: 5432
  database: bosh
  sslmode: "disable"
  connection_options: {"max_connections":32,"pool_timeout":10}
blobstore:
  provider: dav
  options:
    endpoint: http://127.0.0.1:21081
    user: bs_admin
    password: bs_pass
<% if @enable_compiled_package_cache == true  %>
compiled_package_cache:
  provider: local
  options:
    blobstore_path:  /vagrant/tmp/compiled_package_cache
<% end %>
scan_and_fix:
  auto_fix_stateful_nodes: true
cloud:
  plugin: warden
  properties:
    warden:
      unix_domain_socket: "/tmp/warden.sock"
    disk:
      root: /opt/warden/disks
    stemcell:
      root: /opt/warden/stemcells
    nats: nats://<%= @director_ip %>:21084
    agent:
      blobstore:
        provider: dav
        options:
          endpoint: http://<%= @director_ip %>:21081
          user: bs_admin
          password: bs_pass
      mbus: "nats://nats:nats@<%= @director_ip %>:21084"
      server:
        host: <%= @director_ip %>
        password:
      ntp: []
